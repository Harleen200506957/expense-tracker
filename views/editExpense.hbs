<div class="container mt-5">
    <h2>Edit Expense</h2>
    <form action="/expense/edit/{{expense._id}}" method="post">
        <!-- Category field -->
        <div class="form-group">
            <label for="category">Category: </label>
            <select class="form-control" id="category" name="category" required>
                <option value="" disabled>Select a category</option>
                {{#each categories}}
                <option value="{{this}}" {{#if (eq expense.category this)}}selected{{/if}}>{{this}}</option>
                {{/each}}
            </select>
            <!-- Display category validation errors -->
            {{#if errors.category}}
            <div class="invalid-feedback">
                {{errors.category.[0].message}}
            </div>
            {{/if}}
        </div>

        <!-- Name field -->
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="{{expense.name}}" required>
            <!-- Display name validation errors -->
            {{#if errors.name}}
            <div class="invalid-feedback">
                {{errors.name.[0].message}}
            </div>
            {{/if}}
        </div>

        <!-- Date field -->
        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" class="form-control" id="date" name="date" value="{{formatDate expense.date}}" required>
            <!-- Display date validation errors -->
            {{#if errors.date}}
            <div class="invalid-feedback">
                {{errors.date.[0].message}}
            </div>
            {{/if}}
        </div>

        <!-- Amount field -->
        <div class="form-group">
            <label for="amount">Amount:</label>
            <input type="number" class="form-control" id="amount" name="amount" step="0.01" value="{{expense.amount}}" required>
            <!-- Display amount validation errors -->
            {{#if errors.amount}}
            <div class="invalid-feedback">
                {{errors.amount.[0].message}}
            </div>
            {{/if}}
        </div>

        <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/expense" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
