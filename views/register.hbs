<div class="d-flex justify-content-center form-wrapper mt-4">
    <div class="card">
        <div class="card-body">
            <form action="/register" class="needs-validation"  method="post" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Full Name">
                    {{#if errors.name }}                  
                        <div class="invalid-feedback d-block">
                            {{{ errors.name }}}
                        </div>
                    {{/if}}  
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                    {{#if errors.email }}                  
                    <div class="invalid-feedback d-block">
                        {{{ errors.email }}}
                    </div>
                    {{/if}}  
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                        aria-labelledby="passwordHelpBlock">
                    {{#if errors.password }}                  
                    <div class="invalid-feedback d-block">
                        {{{ errors.password }}}
                    </div>
                    {{/if}}  
                    <div id="passwordHelpBlock" class="form-text">
                        Your password must be minimum 8 characters long, contain letters and numbers, special characters, and must not
                        contain
                        spaces, or emoji.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="confpassword" class="form-label">Confirm Password</label>
                    <input type="password" id="confpassword" name="confpassword" class="form-control"
                        aria-labelledby="passwordHelpBlock">
                    {{#if errors.password }}                  
                    <div class="invalid-feedback d-block">
                        {{{ errors.password }}}
                    </div>
                    {{/if}} 
                    <div id="passwordHelpBlock" class="form-text">
                        Your password must be minimum 8 characters long, contain letters and numbers, special characters, and must not
                        contain
                        spaces, or emoji.
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Register</button>
                </div>
            </form>

            <div>
                <p class="text-center">If you have already registered, please <a href="/login"
                        class="link-underline link-underline-opacity-0">Sign In</a>.</p>
            </div>
        </div>
    </div>
</div>